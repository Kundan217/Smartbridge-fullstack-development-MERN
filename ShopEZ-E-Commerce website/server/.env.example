# Example environment variables for ShopNest server
# Copy this file to .env and fill values before running the server

# Node
NODE_ENV=development
PORT=5000

# MongoDB (local or Atlas)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxxx.mongodb.net/shopEZ?retryWrites=true&w=majority

# JWT
JWT_SECRET=replace_with_a_long_random_string

# PayPal (if using PayPal integration)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Cloudinary (if using image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URL for CORS
CLIENT_URL=http://localhost:5173
